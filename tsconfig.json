{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "allowSyntheticDefaultImports": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@shadcn/ui": ["node_modules/@shadcn/ui"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  